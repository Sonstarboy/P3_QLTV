<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Name</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Year published</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td width="150px"><%= book.isbn %></td>
        <td width="100px"><%= book.name %></td>
        <td width="150px"><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td width="150px"><%= book.year_published %></td>
        <td><%= book.description[0...100] + "..." %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
