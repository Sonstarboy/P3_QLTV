<p id="notice"><%= notice %></p>

<h1>Lendings</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Reader</th>
      <th>Borrow date</th>
      <th>Appointment date</th>
      <th>Pay date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.book %></td>
        <td><%= lending.reader %></td>
        <td><%= lending.borrow_date %></td>
        <td><%= lending.appointment_date %></td>
        <td><%= lending.pay_date %></td>
        <td><%= lending.description %></td>
        <td><%= link_to 'Show', lending %></td>
        <td><%= link_to 'Edit', edit_lending_path(lending) %></td>
        <td><%= link_to 'Destroy', lending, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

