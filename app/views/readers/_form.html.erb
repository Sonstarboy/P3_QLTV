<%= simple_form_for(@reader) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :code_card %>

    <%= f.input :name %>

    <%= f.input :birthday %>

    <%= f.input :phone %>

    <%= f.input :unit %>

    <%= f.input :start_date %>

    <%= f.input :end_date %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
