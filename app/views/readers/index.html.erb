<p id="notice"><%= notice %></p>

<h1>Readers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Code card</th>
      <th>Avatar</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Phone</th>
      <th>Unit</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.code_card %></td>
        <td><%= image_tag reader.avatar.url(:thumb) %></td>
        <td><%= reader.name %></td>
        <td><%= reader.birthday %></td>
        <td><%= reader.phone %></td>
        <td><%= reader.unit %></td>
        <td><%= reader.start_date %></td>
        <td><%= reader.end_date %></td>
        <td><%= link_to 'Show', reader %></td>
        <td><%= link_to 'Edit', edit_reader_path(reader) %></td>
        <td><%= link_to 'Destroy', reader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

